{
    "name": "lendable/interview",
    "type": "project",
    "bin": "/bin/calculate-fee",
    "require": {
        "php": "^8.4"
    },
    "autoload": {
        "psr-4": {
            "Interview\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Interview\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "friendsofphp/php-cs-fixer": "^v3.87",
        "phpstan/phpstan": "^2.1.27",
        "rector/rector": "^2.1.7",
        "deptrac/deptrac": "^4.2",
        "codeception/codeception": "^5.3",
        "codeception/module-phpbrowser": "*",
        "codeception/module-asserts": "*",
        "codeception/module-cli": "^2.0"
    },
    "scripts": {
        "test": [
            "@php vendor/bin/codecept run unit --colors"
        ],
        "cs-fix": "php vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "phpstan": "php vendor/bin/phpstan analyse -c phpstan.neon",
        "rector": "php vendor/bin/rector process --no-diffs",
        "deptrac": "php vendor/bin/deptrac analyse --config-file=deptrac.yaml",
        "qa": [
            "@cs-fix",
            "@phpstan",
            "@rector",
            "@deptrac"
        ],
        "test:phpunit": "php vendor/bin/phpunit --testsuite unit --colors=always",
        "test:codeception:unit": "php vendor/bin/codecept run unit --colors",
        "test:codeception:integration": "php vendor/bin/codecept run integration --colors",
        "test:codeception:acceptance": "php vendor/bin/codecept run acceptance --colors",
        "test:all": [
            "@test:phpunit",
            "@test:codeception:unit",
            "@test:codeception:integration",
            "@test:codeception:acceptance"
        ]
    }
}
